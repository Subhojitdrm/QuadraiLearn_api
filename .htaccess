<IfModule mod_rewrite.c>
  RewriteEngine On

  # If the request is not for an existing file or directory in the 'public' folder,
  # route the request to the front controller (index.php).
  # This handles all API endpoints like /api/health, /api/books, etc.
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteRule ^(.*)$ public/index.php [L]
</IfModule>