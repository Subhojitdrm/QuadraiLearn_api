<IfModule mod_rewrite.c>
  RewriteEngine On

  # Set the base path for the rewrite rules
  # This should be the URL path that corresponds to this directory.
  RewriteBase /api/

  # If the request is not already for the public folder, rewrite it to the public folder.
  # This prevents a rewrite loop.
  RewriteCond %{REQUEST_URI} !^/api/public/
  RewriteRule ^(.*)$ public/$1 [L]
</IfModule>